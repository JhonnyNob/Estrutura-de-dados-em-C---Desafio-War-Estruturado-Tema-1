#include <stdio.h>
#include <string.h>

typedef struct {
    char nome[100];
    char cor[50];
    int tropas;
} territorio;

int main(){
	
	territorio mapa[5]; //atribuo ao tipo territorio a variavel mapa

    printf("=== Cadrasto de Territorios === \n\n");

    for(int i = 0; i < 5; i++) {
        printf("Nome do Território: ");
        fgets(mapa[i].nome, 100, stdin ); //stdin diz pro pc que é pra ler da entrada padão(o telcado), pq o fgets é feito pra ler arquivos

        printf("Cor do territorio: ");
        fgets(mapa[i].cor, 50, stdin );

        printf("numero de tropas: ");
        scanf("%d" , &mapa[i].tropas);
        getchar(); // consome o enter do buffer
         
    }
    
     // Exibe todos os dados ao final
    	printf("\n=== Lista de Territorios ===\n");
    for(int i = 0; i < 5; i++) {
        printf("Territorio: %s", mapa[i].nome);
        printf("Cor do territorio: %s", mapa[i].cor);
        printf("Numero de tropas: %d\n", mapa[i].tropas);
        printf("----------------------------\n");
    }
    
    return 0;
    
}
